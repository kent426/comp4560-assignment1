@model IEnumerable<ZenithDataLib.Models.Event>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivityCategory.ActivityDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventFromDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventToDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityCategory.ActivityDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventFromDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventToDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.EventId }) |
                @Html.ActionLink("Details", "Details", new { id=item.EventId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.EventId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
