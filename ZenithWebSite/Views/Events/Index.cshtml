@model IEnumerable<ass2.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h2>Events</h2>
@if (User.IsInRole("Admin"))
{
<p>
    <a asp-action="Create">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventFromDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventToDateTime)
                </th>

            <th>
                @Html.DisplayNameFor(model => model.ActivityCategory)
            </th>
@if (User.IsInRole("Admin"))
{
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnteredByUsername)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
}
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventFromDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventToDateTime)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ActivityCategory.ActivityDescription)
            </td>
@if (User.IsInRole("Admin"))
{
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnteredByUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
            </td>
}
        </tr>
}
    </tbody>
</table>
